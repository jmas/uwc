<div id="product-view">
  <div class="product-image">
    <img src="{{image}}" alt="{{name}}" />
  </div>
  <div class="product-summary">
    <span class="name">{{name}}</span>
    <div class="price">{{price}}</div>
    <div class="amount">
      <input id="product-view-amount" type="text" value="1" />
    </div>
    <span class="action-btn accept" data-cart="{{id}}">В корзину</span>
  </div>
</div>