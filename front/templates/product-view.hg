<div id="product-view">
  <div class="product-image">
    <img src="{{image}}" alt="{{name}}" />
  </div>
  <div class="product-summary">
    <span class="name">{{name}}</span>
    <div class="price">{{_priceFormatted}} грн.</div>
    <div class="amount">
      <input id="product-view-amount" type="text" value="1" />
    </div>
    <span id="product-view-cart-btn" class="action-btn accept" data-cart="{{id}}" data-cart-amount="{{amount}}">В корзину</span>
  </div>
</div>